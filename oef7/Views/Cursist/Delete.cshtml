@model Cursist
<form asp-action="Delete">
    <div class="form-group row">
        <label asp-for="Id" class="col-sm-2"></label>
        <div class="col-sm-10">@Model.Id</div>
    </div>
    <div class="form-group row">
        <label asp-for="Voornaam" class="col-sm-2"></label>
        <div class="col-sm-10">@Model.Voornaam</div>
    </div>
    <div class="form-group row">
        <label asp-for="Achternaam" class="col-sm-2"></label>
        <div class="col-sm-10">@Model.Achternaam</div>
    </div>
    <button type="submit" class="btn btn-danger">Verwijderen</button>
    <a asp-action="Index" class="btn btn-secondary">Annuleren</a>
</form>